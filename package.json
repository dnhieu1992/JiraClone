{
  "name": "jira-clone",
  "version": "1.0.0",
  "private": true,
  "description": "Jira Clone Monorepo",
  "scripts": {
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:api\"",
    "dev:web": "pnpm --filter @jira-clone/web dev",
    "dev:api": "pnpm --filter @jira-clone/api start:dev",
    "build:web": "pnpm --filter @jira-clone/web build",
    "build:api": "pnpm --filter @jira-clone/api build",
    "build": "pnpm --filter @jira-clone/web build && pnpm --filter @jira-clone/api build"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

