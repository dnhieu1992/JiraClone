{
  "name": "jira-clone",
  "version": "1.0.0",
  "private": true,
  "description": "Jira Clone Monorepo",
  "scripts": {
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:api\"",
    "dev:web": "pnpm --filter @jira-clone/web dev",
    "dev:api": "pnpm --filter @jira-clone/api start:dev",
    "build:web": "pnpm --filter @jira-clone/web build",
    "build:api": "pnpm --filter @jira-clone/api build",
    "build": "pnpm --filter @jira-clone/web build && pnpm --filter @jira-clone/api build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "type-check": "pnpm -r type-check",
    "type-check:web": "pnpm --filter @jira-clone/web type-check",
    "type-check:api": "pnpm --filter @jira-clone/api type-check",
    "type-check:shared": "pnpm --filter @jira-clone/shared type-check",
    "prepare": "husky"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
